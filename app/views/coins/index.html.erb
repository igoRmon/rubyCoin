<div class="container">

<p  id="notice"><%= notice %></p>


<div class="row">
  <div class="col-6 col-md-4"></div>
  <div class="col-6 col-md-4"> 
      <div class='row align-items-center justify-content-center'>
        <h1 class='text-center'>Coins</h1>
        <%= image_tag('logo/coin.png', width:'50px')%> </div>
      </div>
  <div class="col-6 col-md-4"></div>
</div>


  <table class='table'>
    <thead class='thead-dark'>
      <tr>
        <th>Descrição</th>
        <th>Sigla</th>
        <th>Imagem</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronyn %></td>
          <td> <%=  image_tag coin.url_image, width: 25, height: 25 %> </td>
          <td><%= link_to 'Show', coin, :class => 'btn  btn-secondary', :style=> 'color:#FFFFFF;' %></td>
          <td><%= link_to 'Edit', edit_coin_path(coin), :class => 'btn  btn-secondary', :style=> 'color:#FFFFFF;' %></td>
          <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn  btn-secondary ', :style=> 'color:#FFFFFF;'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
  <%= link_to 'New Coin', new_coin_path, :class => "btn btn-dark btn-block" ,:style=> 'color:#FFFFFF;' %> 
</div>